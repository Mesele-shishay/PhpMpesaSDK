{
  "name": "mesa-sdk/php-mpesa-sdk",
  "version": "1.0.0",
  "description": "A PHP SDK for Safaricom's M-Pesa API integration, featuring fluent interface, robust error handling, and comprehensive documentation.",
  "type": "library",
  "keywords": [
    "mpesa",
    "safaricom",
    "payment",
    "mobile-money",
    "ethiopia",
    "africa",
    "payment-gateway",
    "api-integration",
    "php-sdk"
  ],
  "homepage": "https://github.com/Mesele-shishay/PhpMpesaSDK",
  "license": "MIT",
  "authors": [
    {
      "name": "Mesele Shishay",
      "email": "messeleshishaymm@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "guzzlehttp/guzzle": "^7.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "MesaSDK\\PhpMpesa\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MesaSDK\\PhpMpesa\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/pest",
    "test-coverage": "./vendor/bin/pest --coverage-html coverage",
    "format": "php-cs-fixer fix --allow-risky=yes",
    "analyse": [
      "@php phpstan analyse",
      "@php psalm",
      "@php phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
      "@php phpcs"
    ],
    "check-style": "phpcs src tests",
    "fix-style": "phpcbf src tests"
  },
  "scripts-descriptions": {
    "test": "Run unit tests",
    "test-coverage": "Run unit tests with HTML coverage report",
    "format": "Fix code style issues",
    "analyse": "Run static analysis tools",
    "check-style": "Check code style",
    "fix-style": "Fix code style"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/Mesele-shishay/PhpMpesaSDK/issues",
    "source": "https://github.com/Mesele-shishay/PhpMpesaSDK",
    "docs": "https://github.com/Mesele-shishay/PhpMpesaSDK/wiki"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/Mesele-shishay"
    }
  ],
  "require-dev": {
    "pestphp/pest": "^3.7"
  }
}
